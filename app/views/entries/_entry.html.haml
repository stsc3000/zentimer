.entries-list-item-form

  .entries-list-item-form-quick-input
    .entries-list-item-form-flow-controls
      - if renderControls
        %a.continue-icon(ng-hide="entry.running" ng-click="continue()")
        %a.pause-icon(ng-show="entry.running" ng-click="pause()")
    %ti-elapsed-entry(model="entry" elapsed="entry.elapsed" disabled="entry.running")


  .entries-list-item-form-main-inputs
    .entries-list-item-form-project.narrow
      %ti-project-entry(on="entry.project" update="entry.persist()" suggestion-domain="projectSuggestions")
    .entries-list-item-form-description.narrow
      %textarea.description-entry(ng-model="entry.description" ng-blur="entry.persist()" placeholder="Description")
    .entries-list-item-form-tags.narrow
      %ti-tag-entry(on="entry.tag_list" suggestion-domain="tagSuggestions" update="entry.persist()" placeholder="+Tag")

    .entries-list-item-form-hidden-actions
      %div(style="display: table-cell; width: 10%")
      .entries-list-item-form-hidden-actions-cell
        %a
          %i.fa.fa-copy.fa-fw(ti-copy copy-source="entry.tag_list")
        - if deleteFromQuery
          %a(ng-click="query.deleteEntry(entry)")
            %i.fa.fa-trash-o.fa-fw
        - else
          %a(ng-click="entry.delete()")
            %i.fa.fa-trash-o.fa-fw




  -#.entries-list-item-form-visible-info
    -#.entries-list-item-form-context-info
      -#- if renderLoggedAt
        -#.entries-list-item-form-context-logged-at
          -#%i.logged-at-icon
          -#{{ entry.logged_at }}

      -#.entries-list-item-form-context-elapsed
        -#%i.elapsed-icon
        -#%ti-elapsed-entry(model="entry" elapsed="entry.elapsed" disabled="entry.running")

      -#.entries-list-item-form-context-project
        -#%i.projects-icon
        -#%ti-project-entry(on="entry.project" update="entry.persist()" suggestion-domain="projectSuggestions")

    -#.entries-list-item-form-main-row
      -#.entries-list-item-form-main-info
        -#.entries-list-item-form-main-info-tags
          -#%ti-tag-entry(on="entry.tag_list" suggestion-domain="tagSuggestions" update="entry.persist()" placeholder="+Tag")
        -#.entries-list-item-form-main-info-description
          -#%textarea.description-entry(ng-model="entry.description" ng-blur="entry.persist()" placeholder="Description")



 
  -#.entries-list-item-form-hidden-info
    -#hidden
  -#%div
    -#.entry-top-level-row
      -#- if renderLoggedAt
        -#.entry-top-level-row-logged-at
          -#%i.fa.fa-calendar.fa-fw
          -#{{ entry.logged_at }}
      -#.entry-top-level-row-elapsed-entry
        -#%ti-elapsed-entry(model="entry" elapsed="entry.elapsed" disabled="entry.running")
      -#.entry-top-level-row-project-entry
        -#%ti-project-entry(on="entry.project" update="entry.persist()" suggestion-domain="projectSuggestions")
    -#.entry-additional-info
      -#%ti-tag-entry(on="entry.tag_list" suggestion-domain="tagSuggestions" update="entry.persist()" placeholder="+Tag")
      -#.entry-additional-info-description
        -#%i.entry-additional-info-icon.fa.fa-quote-left.fa-fw
        -#%textarea.entry-edit-description(ng-model="entry.description" ng-blur="entry.persist()" placeholder="Description")
-#.entry-row-hidden

